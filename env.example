# =============================================================================
# AI Resume Screening - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your production values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
APP_NAME="AI Resume Screening"
API_PREFIX="/api"
# Set to "production" for production deployment
ENVIRONMENT="production"

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# For Docker Compose, use: mongodb://mongo:27017
# For production with auth: mongodb://username:password@host:27017/dbname?authSource=admin
DB_URI="mongodb://mongo:27017"
DB_NAME="resume_screening"

# MongoDB Authentication (for production)
# Uncomment and set these when using docker-compose.prod.yml
# MONGO_ROOT_USERNAME="admin"
# MONGO_ROOT_PASSWORD="change-this-secure-password"

# -----------------------------------------------------------------------------
# AWS / S3 Object Storage Configuration
# -----------------------------------------------------------------------------
# REQUIRED: Replace with your actual AWS credentials
AWS_ACCESS_KEY="your-aws-access-key-here"
AWS_SECRET_KEY="your-aws-secret-key-here"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="your-resume-bucket-name"

# Optional: For LocalStack/MinIO or custom S3-compatible storage
# S3_ENDPOINT_URL="http://localhost:4566"

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# IMPORTANT: This must be the EXTERNAL URL that browsers can access
# For Docker: Use http://localhost:8000 or your server's public IP/domain
# For production: Use https://api.yourdomain.com or your backend URL
VITE_API_BASE_URL="http://localhost:8000"

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# For production: Set to your frontend domain(s)
# Example: "https://app.yourdomain.com,https://www.yourdomain.com"
ALLOWED_ORIGINS="http://localhost:4173,http://localhost:5173"

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# CRITICAL: Generate a secure random key for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Or: openssl rand -base64 32
JWT_SECRET_KEY="change-this-to-a-secure-random-string-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# NLP Models Configuration
# -----------------------------------------------------------------------------
SPACY_MODEL="en_core_web_sm"
EMBEDDING_MODEL_NAME="sentence-transformers/all-MiniLM-L6-v2"

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
RESUME_MAX_SIZE_MB=10
